<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("partials/head")%>
    <style>
      .main-area {
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: auto;
        padding: 30px;
        justify-items: center;
      }
      .pics-area {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 25px;
      }
      .form-details {
        /* border: 1px solid gray; */
        width: 100%;
      }
      .form-field {
        margin-bottom: 30px;
      }
      .form-field label,
      .form-field input,
      .form-field button {
        display: block;
        width: 50%;
        margin: 10px auto;
        border: 0;
        outline: 0;
      }
      .form-field input {
        border-bottom: 1px solid var(--primaryColor);
      }
      .form-field button {
        background-color: var(--primaryColor);
        border-radius: 7px;
        padding: 8px 15px;
        color: white;
      }
      @media (max-width: 768px) {
        .main-area {
          padding: 30px 0;
        }
        .form-field label,
        .form-field input,
        .form-field button {
          width: 80%;
          margin: 10px auto;
        }
      }
    </style>
  </head>
  <body>
    <div class="app">
      <%-include("partials/header")%> <%-include("partials/aside")%>
      <main class="ma">
        <div class="main-area">
          <div class="pics-area">
            <div class="avatar2">
              <img src="/images/icons8-avatar-96.png" alt="" />
            </div>
            <h3>Sirmario</h3>
          </div>
          <div class="form-details">
            <form action="" class="profile-form">
              <div class="form-field">
                <label for="name">Name:</label>
                <input type="text" value="Okeke Chijioke" />
              </div>
              <div class="form-field">
                <label for="name">Email:</label>
                <input type="text" value="sirmario42@gmail.com" />
              </div>
              <div class="form-field">
                <label for="name">Username:</label>
                <input type="text" value="Sirmario" />
              </div>
              <div class="form-field">
                <button>Update</button>
              </div>
            </form>
          </div>
        </div>
      </main>
      <%-include("partials/footer")%>
    </div>
  </body>
</html>
